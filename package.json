{
  "name": "github-notifications",
  "displayName": "Github Notifications",
  "description": "Display GitHub notifications in VS Code",
  "publisher": "julienv3",
  "version": "0.0.1",
  "license": "MIT",
  "homepage": "https://github.com/julienv3/github-notifications",
  "repository": {
    "type": "git",
    "url": "https://github.com/julienv3/github-notifications.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "github-notifications.updateToken",
        "title": "GitHub Notifications: Update token"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "github-notifications",
          "title": "GitHub Notifications",
          "icon": "resources/githubnotifications.svg"
        }
      ]
    },
    "views": {
      "github-notifications": [
        {
          "id": "github-notifications-list",
          "name": "GitHub Notifications"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.2.2",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  }
}
